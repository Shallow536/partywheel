#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<HomeScreen>:
    # input_text: input_text  # 已无input_text控件，需移除
    suggestion_list: suggestion_list
    canvas.before:
        Color:
            rgba: 0.93, 0.96, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [30, 40, 30, 30]
        spacing: 18

        Label:
            text: "Party Wheel"
            font_size: 32
            bold: True
            color: 0.2, 0.4, 0.8, 1
            size_hint_y: None
            height: 50

        # 移除TextInput
        # TextInput:
        #     id: input_text
        #     hint_text: "your advise"
        #     size_hint_y: None
        #     height: 44
        #     background_normal: ''
        #     background_active: ''
        #     background_color: 1,1,1,1
        #     foreground_color: 0,0,0,1
        #     padding: [12, 10, 12, 10]
        #     font_size: 18
        #     multiline: False
        #     cursor_color: 0.2,0.4,0.8,1
        #     canvas.before:
        #         Color:
        #             rgba: 1,1,1,1
        #         RoundedRectangle:
        #             pos: self.pos
        #             size: self.size
        #             radius: [12,]

        Button:
            text: "add"
            size_hint_y: None
            height: 44
            font_size: 18
            background_normal: ''
            background_color: 0.2, 0.4, 0.8, 1
            color: 1,1,1,1
            border: (16,16,16,16)
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 1 if self.state=='normal' else 0.3,0.5,1,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [16,]
            on_release: root.open_input_popup()

        Label:
            id: suggestion_list
            text: ""
            text_size: self.size
            valign: 'top'
            halign: 'left'
            color: 0.2,0.4,0.8,1
            font_size: 18
            size_hint_y: 1
            canvas.before:
                Color:
                    rgba: 1,1,1,0.7
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]

        Button:
            text: "start"
            size_hint_y: None
            height: 52
            font_size: 20
            background_normal: ''
            background_color: 1,0.7,0.2,1
            color: 1,1,1,1
            border: (20,20,20,20)
            canvas.before:
                Color:
                    rgba: 1,0.7,0.2, 1 if self.state=='normal' else 1,0.85,0.4,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
            on_release: root.go_to_wheel()

<WheelScreen>:
    canvas.before:
        Color:
            rgba: 0.93, 0.96, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 40, 30, 30]
        spacing: 18

        SpinningWheel:
            id: wheel
            size_hint: 1, 0.7
            angle: root.wheel_angle
            suggestions: root.suggestions

        # 删除结果Label
        # Label:
        #     text: root.result
        #     font_size: 32
        #     bold: True
        #     color: 1,0.4,0.2,1
        #     size_hint_y: None
        #     height: 60
        #     halign: 'center'
        #     valign: 'middle'
        #     canvas.before:
        #         Color:
        #             rgba: 1,1,1,0.8 if root.result else 0,0,0,0
        #         RoundedRectangle:
        #             pos: self.pos
        #             size: self.size
        #             radius: [18,]

        BoxLayout:
            size_hint_y: None
            height: '52dp'
            spacing: 24

            Button:
                text: 'Spin'
                font_size: 20
                background_normal: ''
                background_color: 0.2, 0.4, 0.8, 1
                color: 1,1,1,1
                border: (20,20,20,20)
                canvas.before:
                    Color:
                        rgba: 0.2, 0.4, 0.8, 1 if self.state=='normal' else 0.3,0.5,1,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
                on_release: root.spin()

            Button:
                text: 'Back'
                font_size: 20
                background_normal: ''
                background_color: 0.7,0.7,0.7,1
                color: 1,1,1,1
                border: (20,20,20,20)
                canvas.before:
                    Color:
                        rgba: 0.7,0.7,0.7, 1 if self.state=='normal' else 0.9,0.9,0.9,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
                on_release: app.root.current = 'home'


